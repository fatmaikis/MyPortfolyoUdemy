@model Testimonial
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referanslar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Referans Ekleme Sayfası</div>
                    </div>
                    <div class="card-body">


                        <form method="post">
                            <label>Ad Soyad</label>
                            <input type="text" asp-for="NameSurname" class="form-control" />
                            <br />
                            <label>Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <input type="text" asp-for="Description" class="form-control" />
                            <br />
                            <label>Resim Url</label>
                            <textarea rows="5" asp-for="ImageUrl" class="form-control"> </textarea>
                            <br />
                            <button class=" btn btn-primary"> Referans Ekle</button>


                        </form>

                    </div>
                </div>


            </div>

        </div>
    </div>
</div>
